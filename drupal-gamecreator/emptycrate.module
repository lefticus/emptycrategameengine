function _emptycrate_media_elements()
{
  $options[0] = '';
  $medianids = db_query("SELECT distinct(nid) FROM {node} WHERE type = 'media'");
  while ($medianid = db_fetch_array($medianids))
  {
    $media = node_load($medianid['nid']);
    $options[$media->nid] = $media->title; 
  } 

  return $options;
}

