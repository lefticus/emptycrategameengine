function _emptycrate_room_exits($rid)
{
  $options[''] = '';

  $names = db_query("SELECT name FROM {emptycrate_room_exit} WHERE rid = %d", $rid);
  while ($name = db_fetch_array($names))
  {
    $options[$name["name"]] = $name["name"];
  } 

  return $options;
}

