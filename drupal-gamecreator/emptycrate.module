function _emptycrate_game_room_form($delta, $choices, $rid, $name, $displayed_name, $description, $enter_room_script, $exit_room_script, $room, $character_names, $room_names, $item_names)
{
  $form = array(
    '#type' => 'fieldset',
    '#title' => t('Game Room').' '.($delta + 1),
    '#collapsible' => TRUE,
  );

  $form['rid'] = array(
    '#type' => 'select',
    '#title' => t('Template room for room @n', array('@n' => ($delta + 1))),
    '#default_value' => variable_get('rid',$rid),
